<proxy xmlns="http://ws.apache.org/ns/synapse" name="VFSProxyAscii" statistics="disable" trace="disable" transports="http">
        <target>
            <inSequence>
                <log level="full"/>
                <property action="set" value="ascii.xml" name="transport.vfs.ReplyFileName" scope="transport" type="STRING"/>
                <property action="set" name="OUT_ONLY" scope="default" type="STRING" value="true"/>
                <send>
                    <endpoint>
                        <address uri="vfs:ftp://admin:admin@localhost:8086/in?transport.vfs.fileType=ASCII"/>
                    </endpoint>
                </send>
                <drop/>
            </inSequence>
        </target>
    </proxy>