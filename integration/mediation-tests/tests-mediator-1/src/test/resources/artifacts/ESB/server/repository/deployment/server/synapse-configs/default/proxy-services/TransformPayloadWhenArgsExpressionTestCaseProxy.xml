<proxy xmlns="http://ws.apache.org/ns/synapse" name="TransformPayloadWhenArgsExpressionTestCaseProxy">
    <target>
        <inSequence>
            <log level="full"/>
            <!-- using payloadFactory mediator to transform the request message -->
            <payloadFactory>
                <format>
                    <m:getQuote xmlns:m="http://services.samples">
                        <m:request>
                            <m:symbol>$1</m:symbol>
                        </m:request>
                    </m:getQuote>
                </format>
                <args>
                    <arg xmlns:m0="http://services.samples" expression="//m0:Code/text()"/>
                </args>
            </payloadFactory>
            <log level="full"/>
            <respond/>
        </inSequence>
    </target>
</proxy>