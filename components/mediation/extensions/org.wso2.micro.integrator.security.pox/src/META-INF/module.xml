<module name="POXSecurityModule">
    <Description>This is the WS-security </Description>
    <InFlow>
        <handler name="POXSecurityHandler1"
                 class="org.wso2.micro.integrator.security.pox.POXSecurityHandler">
            <order phase="Transport" after="SOAPActionBasedDispatcher"/>
        </handler>
    </InFlow>

    <InFaultFlow>
        <handler name="POXSecurityHandler1"
                 class="org.wso2.micro.integrator.security.pox.POXSecurityHandler">
            <order phase="Transport" after="SOAPActionBasedDispatcher"/>
        </handler>
    </InFaultFlow>

    <OutFaultFlow>
        <handler name="POXSecurityHandler1"
                 class="org.wso2.micro.integrator.security.pox.POXSecurityHandler">
            <order phase="Transport" after="SOAPActionBasedDispatcher"/>
        </handler>
    </OutFaultFlow>
    <parameter name="adminModule" locked="true">true</parameter>
    <local-policy-assertions>
        <sec:CarbonSecConfig xmlns:sec="http://www.wso2.org/products/carbon/security"/>
    </local-policy-assertions>
</module>
